#include<iostream>
using namespace std;
int main(){

int n;
  cout<<"Enter the size of array: ";
    cin>>n;
    int arr[n];
    cout<<"Enter the elements of array:  "<<endl;
    for(int i=0;i<n;i++)
        {
            cin>>arr[i];
            
        }
    cout<<endl;
    cout<<"The elements of array are : ";
    
    for(int i=0;i<n;i++)
        {
            cout<<arr[i]<<" ";

        }
    cout<<endl;
    
    int sum=0;
    for(int i=0;i<n;i++)
        {
            sum=sum+arr[i];

        }

    float avg = sum/n;

    cout<<"The average of array is : "<<avg<<endl;
            
    return 0;
}

